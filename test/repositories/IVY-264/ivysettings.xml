<ivysettings>
    <settings defaultResolver="myresolver"/>
    <resolvers>
			<filesystem name="myresolver">
				<ivy pattern="${ivy.settings.dir}/[module]/ivy-[revision].xml" />
				<artifact pattern="${ivy.settings.dir}/[module]/[artifact]-[revision].[ext]" />
			</filesystem>
    </resolvers>
</ivysettings>
