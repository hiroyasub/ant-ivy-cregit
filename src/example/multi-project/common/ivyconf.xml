<ivyconf>
	<properties file="${ivy.conf.dir}/ivyconf.properties"/>
	<conf defaultCache="${ivy.conf.dir}/../ivy-cache" defaultResolver="libraries"/>
	<resolvers>
		<filesystem name="projects">
			<artifact pattern="${repository.dir}/[module]/[revision]/[artifact].[ext]" />
			<ivy pattern="${repository.dir}/[module]/[revision]/ivy.xml" />
		</filesystem>
		<ivyrep name="libraries" />
	</resolvers>
	<modules>
	   <!-- all modules of organisation jayasoft will be resolved with the projects resolver -->
	   <!-- all others will be resolved with default resolver: libraries -->
		<module organisation="jayasoft" name=".*" resolver="projects"/>
	</modules>
</ivyconf>
