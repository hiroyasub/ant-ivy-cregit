<ivyconf>
	<property name="ivy.shared.default.root"             value="${ivy.default.ivy.user.dir}/shared" overwrite="false"/>
	<property name="ivy.shared.default.ivy.pattern"      value="[organisation]/[module]/[revision]/[type]s/[artifact].[ext]" overwrite="false"/>
	<property name="ivy.shared.default.artifact.pattern" value="[organisation]/[module]/[revision]/[type]s/[artifact].[ext]" overwrite="false"/>
	<resolvers>
		<filesystem name="shared">
			<ivy pattern="${ivy.shared.default.root}/${ivy.shared.default.ivy.pattern}" />
			<artifact pattern="${ivy.shared.default.root}/${ivy.shared.default.artifact.pattern}" />
		</filesystem>
	</resolvers>
</ivyconf>